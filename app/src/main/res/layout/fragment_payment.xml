<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.external.PaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_receiver"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/cv_details_holder"
            android:focusable="true"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_service"
                    android:textStyle="bold"
                    android:text="Session"
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="105dp"
                    android:background="@color/slight_gray"
                    app:layout_constraintEnd_toStartOf="@id/rec_service"
                    app:layout_constraintTop_toTopOf="@id/rec_service"
                    app:layout_constraintBottom_toBottomOf="@id/rec_service"
                    app:layout_constraintStart_toEndOf="@id/txt_service"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/txt_service"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/txt_time"
                    android:layout_marginTop="10dp"
                    android:text="Time"
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="105dp"
                    android:background="@color/slight_gray"
                    app:layout_constraintEnd_toStartOf="@id/rec_service"
                    app:layout_constraintTop_toTopOf="@id/txt_time"
                    app:layout_constraintBottom_toBottomOf="@id/txt_time"
                    app:layout_constraintStart_toEndOf="@id/rec_time"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/txt_time"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/txt_period"
                    android:text="Duration"
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="105dp"
                    android:background="@color/slight_gray"
                    app:layout_constraintEnd_toStartOf="@id/rec_duration"
                    app:layout_constraintTop_toTopOf="@id/txt_period"
                    app:layout_constraintBottom_toBottomOf="@id/txt_period"
                    app:layout_constraintStart_toEndOf="@id/txt_period"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/txt_period"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt_price"
                    android:textStyle="bold"
                    android:text="Price"
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="105dp"
                    android:background="@color/slight_gray"
                    app:layout_constraintEnd_toStartOf="@id/rec_price"
                    app:layout_constraintTop_toTopOf="@id/txt_price"
                    app:layout_constraintBottom_toBottomOf="@id/txt_price"
                    app:layout_constraintStart_toEndOf="@id/txt_price"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec_service"
                    android:fontFamily="@font/lobster"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/rec_service"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec_time"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/rec_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec_duration"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/rec_duration"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec_price"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/color_white"
                    android:textSize="17sp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/cv_details_holder"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/cv_details_holder"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/colorAccent"
            android:text="Cancel this booking?"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Holder Name"
        android:layout_marginStart="35dp"
        android:id="@+id/txt_card_holder"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rel_receiver"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_card_holder"
        app:layout_constraintStart_toStartOf="@id/txt_card_holder"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cv_holder_name"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:textColorHint="@color/gray">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/holder_name"
                android:background="@color/color_white"
                android:inputType="textPersonName"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:hint="John Sandoe"
                android:ems="16"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:id="@+id/txt_card_number"
        app:layout_constraintTop_toBottomOf="@id/cv_holder_name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_card_number"
        app:layout_constraintStart_toStartOf="@id/txt_card_number"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cv_holder_number"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/visa_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterTextColor="@color/blue"
            app:counterMaxLength="16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:textColorHint="@color/gray">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:id="@+id/card_number"
                android:maxLength="16"
                android:background="@color/color_white"
                android:textStyle="bold"
                android:inputType="number"
                android:digits="01234 56789"
                android:textColor="@color/black"
                android:hint="4444 2344 5100 0089"
                android:ems="16"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/visa_img"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/visa"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:id="@+id/txt_card_exp"
        app:layout_constraintTop_toBottomOf="@id/cv_holder_number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_card_exp"
        app:layout_constraintStart_toStartOf="@id/txt_card_exp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cv_card_exp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:textColorHint="@color/gray">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_exp"
                    android:background="@color/color_white"
                    android:textStyle="bold"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:hint="05/24"
                    android:ems="6"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:layout_marginTop="10dp"
        android:layout_marginStart="85dp"
        android:id="@+id/txt_card_cvv"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/cv_holder_number"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/txt_card_exp"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_card_cvv"
        app:layout_constraintStart_toStartOf="@id/txt_card_cvv"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cv_card_cvv"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:textColorHint="@color/OM">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_cvv"
                    android:textStyle="italic|bold"
                    android:background="@color/color_white"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="3"
                    android:hint="123"
                    android:ems="6"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:text="Subâ€¢total:"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/txt_total"
            android:textSize="16sp"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text=""
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/txt_receiver_total"
            app:layout_constraintTop_toBottomOf="@id/txt_total"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/cv_purchase"
            app:cardUseCompatPadding="true"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/color_white"
            app:cardBackgroundColor="@color/fade_blue"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_check"
                    android:textAllCaps="true"
                    android:text="Purchase"
                    android:textColor="@color/blue"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>