<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">
        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rel_receiver"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="15dp"
                app:cardCornerRadius="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_service"
                        android:textStyle="bold"
                        android:text="Service"
                        android:textColor="@color/gray"
                        android:textSize="17sp"/>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/item_service"
                        app:layout_constraintTop_toTopOf="@id/item_service"
                        app:layout_constraintBottom_toBottomOf="@id/item_service"
                        app:layout_constraintStart_toEndOf="@id/txt_service"/>

                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/txt_service"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/txt_time"
                        android:layout_marginTop="10dp"
                        android:text="Schedule"
                        android:textColor="@color/gray"
                        android:textSize="17sp"/>

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/item_time"
                        app:layout_constraintTop_toTopOf="@id/txt_time"
                        app:layout_constraintBottom_toBottomOf="@id/txt_time"
                        app:layout_constraintStart_toEndOf="@id/txt_time"/>

                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/txt_time"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt_period"
                        android:text="Duration"
                        android:textColor="@color/gray"
                        android:textSize="17sp"/>
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/item_duration"
                        app:layout_constraintTop_toTopOf="@id/txt_period"
                        app:layout_constraintBottom_toBottomOf="@id/txt_period"
                        app:layout_constraintStart_toEndOf="@id/txt_period"/>

                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/txt_period"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txt_price"
                        android:textStyle="bold"
                        android:text="Price"
                        android:textColor="@color/gray"
                        android:textSize="17sp"/>
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@id/item_price"
                        app:layout_constraintTop_toTopOf="@id/txt_price"
                        app:layout_constraintBottom_toBottomOf="@id/txt_price"
                        app:layout_constraintStart_toEndOf="@id/txt_price"/>

                    <TextView
                        app:layout_constraintTop_toTopOf="@id/txt_service"
                        app:layout_constraintBottom_toBottomOf="@id/txt_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_service"
                        android:fontFamily="sans-serif-medium"
                        android:text=""
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="@id/divider1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/divider1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_time"
                        android:fontFamily="sans-serif-medium"
                        android:maxWidth="100dp"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"/>
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/item_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_duration"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"/>
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/item_duration"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_price"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>